#include<iostream>
#include<vector>
#include<algorithm>
using namespace std;
class disJoint{
    public:
    vector<int> par ;
    vector<int> rank ;
    disJoint(int n){
        this->n = n ;
        for(int i=0;i<n;i++){
            par[i] = i;
            rank[i] = 0;
        }
    }
     int find(int x){
        if(par[x]==x){
            return x ;
        }
        return find(par[x]) ;
     }
     int unionByrank(int a,int b){
        int parA = find(a) ;
        int parB = find(b) ;
        if(rank[parA]==rank[parB]){
            par[parB] = parA ;
            rank[parA]++ ;
        }else if(rank[parA]>rank[parB]){
            par[parB] = parA ;
        }else{
            par[parA] = parB ;
        }
     }
};
